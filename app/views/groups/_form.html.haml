= form_with model: @group, local: true do |form|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited
        this group from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  %p
    = form.label :name
    %br/
    = form.text_field :name
  %p
    = form.label :description
    %br/
    = form.text_area :description
  %p
    = form.submit
