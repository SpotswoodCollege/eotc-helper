<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'users/error_messages' %>
      <br />
      <%= f.label :name %>
      <%= f.text_field :name, class: 'text-box' %>
      <br />
      <%= f.label :email %>
      <%= f.email_field :email, class: 'text-box' %>
      <br />
      <%= f.label :password %>
      <%= f.password_field :password, class: 'text-box' %>
      <br />
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'text-box' %>
      <br /><br />
      <%= f.submit "Create Account", class: "submit-button" %>
    <% end %>
  </div>
</div>
